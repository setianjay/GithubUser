<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.fragment.SettingsFragment">

    <LinearLayout
        android:id="@+id/container_language"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:paddingStart="@dimen/dp21"
        android:paddingTop="@dimen/dp10"
        android:paddingEnd="@dimen/dp21"
        android:paddingBottom="@dimen/dp10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_settings_language" />

        <TextView
            android:id="@+id/tv_language"
            style="@style/colorTextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp41"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/change_language"
            android:textSize="@dimen/sp18"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/iv_next_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_next" />

    </LinearLayout>

    <View
        android:id="@+id/vw_page1"
        android:background="@color/gray_soft"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/dp8"/>

    <LinearLayout
        android:id="@+id/container_theme"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:paddingStart="@dimen/dp21"
        android:paddingTop="@dimen/dp10"
        android:paddingEnd="@dimen/dp21"
        android:paddingBottom="@dimen/dp10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_settings_theme" />

        <TextView
            android:id="@+id/tv_theme"
            style="@style/colorTextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp41"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/dark_mode"
            android:textSize="@dimen/sp18"
            android:layout_weight="2" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"/>
    </LinearLayout>

    <View
        android:id="@+id/vw_page2"
        android:background="@color/gray_soft"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/dp8"/>

</LinearLayout>