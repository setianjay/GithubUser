<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_23">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user"
        android:layout_width="@dimen/width_55"
        android:layout_height="@dimen/height_55"
        android:contentDescription="@string/app_name"
        tools:src="@drawable/ic_users"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user"
        style="@style/colorTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_33"
        android:layout_marginTop="@dimen/margin_3"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/name"
        android:textSize="@dimen/text_15"
        app:layout_constraintStart_toEndOf="@id/iv_user"
        app:layout_constraintTop_toTopOf="@id/iv_user" />

    <ImageView
        android:id="@+id/iv_location"
        style="@style/colorImageUser"
        android:layout_width="@dimen/height_24"
        android:layout_height="@dimen/height_24"
        android:layout_marginStart="@dimen/margin_33"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_users"
        app:layout_constraintStart_toEndOf="@id/iv_user"
        app:layout_constraintTop_toBottomOf="@id/tv_user"
        app:layout_constraintBottom_toBottomOf="@id/iv_user" />

    <TextView
        android:id="@+id/tv_location"
        style="@style/colorTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/location"
        android:textSize="@dimen/text_13"
        app:layout_constraintStart_toEndOf="@id/iv_location"
        app:layout_constraintTop_toTopOf="@id/iv_location"
        app:layout_constraintBottom_toBottomOf="@id/iv_location"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/height_1"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@color/gray_soft"
        app:layout_constraintStart_toStartOf="@id/iv_location"
        app:layout_constraintTop_toBottomOf="@id/iv_location"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>