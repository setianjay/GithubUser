<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_23">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user"
            android:layout_width="@dimen/width_55"
            android:layout_height="@dimen/height_55"
            android:contentDescription="@string/app_name"
            android:src="@drawable/im_user_6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_33"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/text_15"
                android:textColor="@color/black"
                android:text="@string/name"
                android:layout_marginTop="@dimen/margin_3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_3"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="@dimen/height_24"
                    android:layout_height="@dimen/height_24"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_location"/>

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:text="@string/location" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/margin_25"/>
        </LinearLayout>
</LinearLayout>